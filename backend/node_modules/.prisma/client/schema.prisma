datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model NodeLicense {
  id              Int             @id @default(autoincrement())
  batchNumber     Int
  contractAddress String
  chainId         Int
  createdAt       DateTime        @default(now())
  batchFilled     Boolean         @default(false)
  fractionalNFTs  FractionalNFT[]
}

model FractionalNFT {
  id                           Int          @id @default(autoincrement())
  fractionalNFTContractAddress String
  fractionalNFTTokenID         Int
  chainId                      Int          @default(1244)
  userWalletAddress            String
  createdAt                    DateTime     @default(now())
  nodeLicenseId                Int?
  nodeLicense                  NodeLicense? @relation(fields: [nodeLicenseId], references: [id])
}
